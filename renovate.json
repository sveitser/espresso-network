{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard"
  ],
  "packageRules": [
    {
      "matchManagers": ["cargo"],
      "matchPaths": [
        "**/Cargo.toml",
        "**/Cargo.lock"
      ],
      "excludePaths": [
        "crates/hotshot/workspace-hack/**"
      ],
      "groupName": "Cargo lockfile updates"
    }
  ]
}
